/* -----------------------
   Переменные и базовые стили
------------------------ */
:root {
    --primary-orange: #FF9800;
    --primary-orange-hover: #ffa733;
    --text-white: #ffffff;
    --text-dark: #333333;
    --glass-bg: rgba(255, 255, 255, 0.1);
    --glass-border: rgba(255, 255, 255, 0.2);
    --shadow-light: rgba(255, 255, 255, 0.3);
    --shadow-dark: rgba(0, 0, 0, 0.2);
    
    --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --border-radius: 20px;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* -----------------------
   Основные стили
------------------------ */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    font-family: var(--font-family);
    overflow-x: hidden;
}

body {
    background: url('../back.png') center/cover no-repeat fixed;
    color: var(--text-white);
    position: relative;
}

body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    z-index: -1;
}
  
/* -----------------------
   Контейнер и макет
------------------------ */
.container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    max-width: 100%;
}

/* -----------------------
   Главная страница - Index
------------------------ */
.main-header {
    text-align: center;
    margin-bottom: 40px;
    margin-top: 60px;
}

.main-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    margin-bottom: 20px;
}

.instruction-text {
    font-size: 1.1rem;
    text-align: center;
    margin-bottom: 40px;
    opacity: 0.9;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
    max-width: 600px;
    line-height: 1.5;
}

/* -----------------------
   Кнопки комнат - Liquid Glass
------------------------ */
.room-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    width: 100%;
    margin: 0 auto 60px auto;
}

.room-button {
    position: relative;
    display: block;
    padding: 24px 40px;
    font-size: 1.8rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    color: var(--text-white);
    border-radius: var(--border-radius);
    backdrop-filter: blur(10px);
    background: linear-gradient(
        135deg,
        rgba(255, 152, 0, 0.8) 0%,
        rgba(255, 193, 7, 0.6) 50%,
        rgba(255, 152, 0, 0.8) 100%
    );
    border: 1px solid var(--glass-border);
    box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 var(--shadow-light),
        0 0 0 1px rgba(255, 255, 255, 0.1);
    transition: var(--transition);
    overflow: hidden;
}

.room-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.2),
        transparent
    );
    transition: left 0.6s;
}

.room-button:hover {
    transform: translateY(-2px);
    background: linear-gradient(
        135deg,
        rgba(255, 152, 0, 1) 0%,
        rgba(255, 193, 7, 0.9) 50%,
        rgba(255, 152, 0, 1) 100%
    );
    box-shadow: 
        0 12px 40px rgba(0, 0, 0, 0.4),
        inset 0 1px 0 var(--shadow-light),
        0 0 0 1px rgba(255, 255, 255, 0.2);
}

.room-button:hover::before {
    left: 100%;
}

.room-button:active {
    transform: translateY(0);
    box-shadow: 
        0 4px 20px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 var(--shadow-light);
}
  
/* -----------------------
   PWA и Telegram секции
------------------------ */
.main-footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    width: 100%;
    max-width: 500px;
}

.pwa-section, .telegram-section {
    background: var(--glass-bg);
    backdrop-filter: blur(15px);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius);
    padding: 24px;
    width: 100%;
    text-align: center;
}

.pwa-instruction {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
}

.pwa-icons-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
}

.pwa-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
}

.step-number {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: var(--primary-orange);
    color: var(--text-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.9rem;
}

.pwa-icon {
    width: 32px;
    height: 32px;
    opacity: 0.9;
}

.pwa-icon[src="share.png"] {
    width: 24px;
    height: 32px;
}

.pwa-text {
    font-size: 0.9rem;
    text-align: center;
    line-height: 1.4;
    opacity: 0.9;
    max-width: 300px;
}

.install-button, .telegram-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-hover));
    color: var(--text-white);
    border: none;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: var(--transition);
    box-shadow: 0 4px 15px rgba(255, 152, 0, 0.3);
}

.install-button:hover, .telegram-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 152, 0, 0.4);
}

.install-icon, .telegram-icon {
    width: 20px;
    height: 20px;
}

.telegram-icon {
    width: 60px;
    height: 60px;
}

.telegram-text {
    display: block;
    margin-bottom: 16px;
    opacity: 0.9;
    line-height: 1.4;
}

.copyright {
    margin-top: 40px;
    opacity: 0.7;
    font-size: 0.9rem;
}
  
/* -----------------------
   Страницы комнат - SPA
------------------------ */
.room-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding-bottom: 80px;
}

.room-header {
    background: var(--glass-bg);
    backdrop-filter: blur(15px);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius);
    margin: 20px;
    padding: 20px;
    text-align: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: top;
}

.room-header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 20px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    margin-bottom: 20px;
}

/* Переключатель режимов */
.mode-switcher {
    display: flex;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 16px;
    padding: 4px;
    margin: 0 auto;
    width: fit-content;
}

.mode-btn {
    padding: 12px 24px;
    border: none;
    background: transparent;
    color: rgba(255, 255, 255, 0.7);
    border-radius: 12px;
    cursor: pointer;
    transition: var(--transition);
    font-weight: 600;
    position: relative;
    overflow: hidden;
}

.mode-btn.active {
    background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-hover));
    color: var(--text-white);
    box-shadow: 0 4px 15px rgba(255, 152, 0, 0.3);
}

.mode-btn:not(.active):hover {
    color: var(--text-white);
    background: rgba(255, 255, 255, 0.1);
}

/* Контент страницы */
.room-content {
    flex: 1;
    margin: 20px;
    background: var(--glass-bg);
    backdrop-filter: blur(15px);
    border: 1px solid var(--glass-border);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    height: calc(100vh - 160px); /* Высота экрана минус header и отступы */
}

.content-section {
    display: none;
    padding: 20px;
    height: 100%;
    overflow-y: auto; /* Разрешаем скролл */
    overflow-x: hidden;
}

.content-section.active {
    display: flex;
    flex-direction: column;
    animation: fadeIn 0.3s ease-in-out;
}

/* Улучшенный скролл для мобильных */
.content-section {
    -webkit-overflow-scrolling: touch; /* Плавный скролл на iOS */
    scrollbar-width: thin;
    scrollbar-color: rgba(255, 152, 0, 0.5) transparent;
}

.content-section::-webkit-scrollbar {
    width: 4px;
}

.content-section::-webkit-scrollbar-track {
    background: transparent;
}

.content-section::-webkit-scrollbar-thumb {
    background: rgba(255, 152, 0, 0.5);
    border-radius: 2px;
}

.content-section::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 152, 0, 0.7);
}

/* Стили для iframe */
.content-section iframe {
    width: 100%;
    flex: 1; /* Растягиваем на всю доступную высоту */
    min-height: calc(100vh - 240px); /* Минимальная высота */
    height: 100%; /* Явно задаем высоту для скролла */
    border: none;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.1);
}

/* Специальные стили для айфреймов форм */
.content-section#booking-section iframe {
    height: 600px !important; /* Фиксированная высота для принудительного скролла */
    max-height: 600px !important;
    overflow: auto !important;
    -webkit-overflow-scrolling: touch !important;
    touch-action: auto !important;
    scrollbar-width: thin;
    scrollbar-color: var(--primary-orange) transparent;
}

.content-section#calendar-section iframe {
    height: 600px !important; /* Для календаря оставляем 600px */
    max-height: none;
    touch-action: auto !important;
}

/* Принудительный скролл для всех айфреймов */
iframe {
    overflow: auto !important;
    -webkit-overflow-scrolling: touch !important;
    touch-action: auto !important;
    position: relative;
    z-index: 1;
}

/* Стили для контейнера формы */
.content-section#booking-section {
    overflow: visible; /* Позволяем айфрейму создать свой скролл */
    touch-action: auto !important;
}

.booking-instruction + script + iframe {
    display: block !important;
    overflow-y: auto !important;
    overflow-x: hidden !important;
    touch-action: pan-y !important;
}

/* Контейнер для iframe */
.iframe-container {
    width: 100%;
    height: 600px;
    max-height: 70vh;
    overflow: hidden;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    position: relative;
    -webkit-overflow-scrolling: touch;
    touch-action: auto;
}

.iframe-container iframe {
    width: 100%;
    height: 100%;
    border: none;
    overflow: auto !important;
    -webkit-overflow-scrolling: touch !important;
    touch-action: pan-y !important;
    position: relative;
    z-index: 10;
}

/* Дополнительные стили для iOS Safari */
@supports (-webkit-touch-callout: none) {
    .iframe-container {
        -webkit-overflow-scrolling: touch !important;
        overflow-y: auto !important;
        transform: translateZ(0);
    }
    
    .iframe-container iframe {
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
        will-change: scroll-position;
    }
}

/* Для Android Chrome */
@media screen and (-webkit-min-device-pixel-ratio: 0) {
    .iframe-container iframe {
        overflow: scroll !important;
        -webkit-overflow-scrolling: touch !important;
        overscroll-behavior: contain;
        scroll-behavior: smooth;
    }
}

/* Принудительные стили для скроллинга Яндекс.Форм */
iframe[src*="forms.yandex.ru"] {
    position: relative !important;
    overflow: auto !important;
    -webkit-overflow-scrolling: touch !important;
    touch-action: pan-y pinch-zoom !important;
    overscroll-behavior: contain !important;
    scrollbar-width: auto !important;
}

/* Убираем блокировку touch событий */
.content-section#booking-section {
    touch-action: auto !important;
    -webkit-touch-callout: default !important;
    -webkit-user-select: auto !important;
    user-select: auto !important;
}

.iframe-container {
    touch-action: auto !important;
    -webkit-touch-callout: default !important;
}

/* Для очень старых браузеров */
.legacy-scroll {
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    height: 600px;
    position: relative;
}

/* -----------------------
   Нижний тулбар навигации
------------------------ */
.bottom-toolbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border-top: 1px solid var(--glass-border);
    padding: 12px 20px;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
    z-index: 1000;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: bottom;
}

.toolbar-content {
    display: flex;
    justify-content: center;
    gap: 40px;
    max-width: 400px;
    margin: 0 auto;
}

.toolbar-room-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 8px 16px;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    transition: var(--transition);
    border-radius: 12px;
    text-decoration: none;
    min-width: 60px;
}

.toolbar-room-btn.active {
    color: var(--text-white);
    background: rgba(255, 152, 0, 0.2);
    box-shadow: 0 2px 10px rgba(255, 152, 0, 0.3);
}

.toolbar-room-btn:hover:not(.active) {
    color: var(--text-white);
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
}

.toolbar-room-icon {
    width: 24px;
    height: 24px;
    background: currentColor;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
}

.toolbar-room-label {
    font-size: 0.8rem;
    font-weight: 500;
}

/* -----------------------
   Кнопка "На главную"
------------------------ */
.home-button {
    position: fixed;
    top: 20px;
    left: 20px;
    width: 44px;
    height: 44px;
    background: var(--glass-bg);
    backdrop-filter: blur(15px);
    border: 1px solid var(--glass-border);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-white);
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 600;
    transition: var(--transition);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    z-index: 999;
}

.home-button:hover {
    background: rgba(255, 152, 0, 0.2);
    color: var(--primary-orange);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
}

.home-button::before {
    content: '←';
}

/* -----------------------
   Инструкция для бронирования
------------------------ */
.booking-instruction {
    margin-bottom: 20px;
    padding: 16px;
    background: rgba(255, 152, 0, 0.1);
    border: 1px solid rgba(255, 152, 0, 0.3);
    border-radius: 12px;
    text-align: center;
}

.booking-instruction p {
    margin: 0;
    font-size: 1rem;
    line-height: 1.5;
    color: var(--text-white);
    opacity: 0.9;
}

/* -----------------------
   Анимация сворачивания при скролле
------------------------ */
.room-header {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: top;
}

.room-header h1 {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    margin-bottom: 20px;
}

.bottom-toolbar {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: bottom;
}

.home-button {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Свернутое состояние при скролле */
.scrolling .room-header {
    padding: 10px 20px;
    margin: 10px;
    border-radius: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.scrolling .room-header h1 {
    display: none;
}

.scrolling .mode-switcher {
    margin: 0;
}

.scrolling .bottom-toolbar {
    padding: 8px 20px;
}

.scrolling .toolbar-room-label {
    display: none;
}

.scrolling .toolbar-room-icon {
    font-size: 1.1rem;
    margin-bottom: 0;
}

.scrolling .toolbar-content {
    gap: 30px;
}

.scrolling .home-button {
    width: 36px;
    height: 36px;
    top: 15px;
    left: 15px;
}

/* Увеличиваем высоту контента при скролле */
.scrolling .room-content {
    height: calc(100vh - 80px); /* Больше места для айфрейма */
    margin: 10px;
}

/* Адаптация для мобильных */
@media (max-width: 480px) {
    .scrolling .room-content {
        height: calc(100vh - 70px);
        margin: 5px;
    }
    
    .scrolling .room-header {
        padding: 8px 15px;
        margin: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .scrolling .bottom-toolbar {
        padding: 6px 15px;
    }
    
    .scrolling .home-button {
        width: 32px;
        height: 32px;
        top: 10px;
        left: 10px;
    }
}
  
/* -----------------------
   Адаптивные стили
------------------------ */
@media (max-width: 768px) {
    .main-header h1 {
        font-size: 2rem;
    }
    
    .room-button {
        font-size: 1.6rem;
        padding: 20px 32px;
    }
    
    .pwa-icons-row {
        gap: 16px;
    }
    
    .pwa-text {
        max-width: 250px;
        font-size: 0.85rem;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 15px;
    }
    
    .main-header {
        margin-top: 40px;
        margin-bottom: 30px;
    }
    
    .main-header h1 {
        font-size: 1.8rem;
    }
    
    .room-button {
        font-size: 1.4rem;
        padding: 18px 28px;
    }
    
    .room-content {
        margin: 10px;
        height: calc(100vh - 140px); /* Увеличиваем высоту на мобильных */
    }
    
    .content-section {
        padding: 10px;
    }
    
    .content-section iframe {
        min-height: calc(100vh - 200px); /* Больше места для iframe на мобильных */
        border-radius: 8px;
    }
    
    .toolbar-content {
        gap: 20px;
    }
    
    .toolbar-room-btn {
        min-width: 50px;
        padding: 6px 12px;
    }
    
    /* Инструкция по бронированию на мобильных */
    .booking-instruction {
        margin-bottom: 10px;
        padding: 12px;
        font-size: 0.9rem;
    }
}

/* Плавные переходы */
@media (prefers-reduced-motion: no-preference) {
    .room-button::before {
        transition: left 0.6s ease;
    }
    
    .mode-btn {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .toolbar-room-btn {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
}

/* Высокий контраст для доступности */
@media (prefers-contrast: high) {
    .room-button {
        border: 2px solid var(--primary-orange);
    }
    
    .mode-btn.active {
        border: 2px solid var(--text-white);
    }
}

/* Тёмная тема система */
@media (prefers-color-scheme: dark) {
    :root {
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
    }
}
